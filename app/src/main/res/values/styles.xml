<resources>
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_primary</item>
        <item name="colorControlNormal">@color/color_primary</item>
        <item name="colorControlActivated">@color/color_primary</item>
        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="BaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="HomeTheme" parent="BaseTheme">
        <item name="android:windowBackground">@color/color_f9f9ff</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- buttons color -->
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:windowBackground">@drawable/bg_dialog_inset</item>
        <!-- message color -->
        <item name="android:textColorPrimary">@color/color_8a000000</item>
        <!-- title color -->
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
    </style>

    <style name="DialogWindowTitle" parent="@style/Base.DialogWindowTitle.AppCompat">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Widget.AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">

        <!--&lt;!&ndash; colorPrimaryDark is used for the tool bar &ndash;&gt;-->
        <!--<item name="colorPrimary">@color/custom_grey</item>-->

        <!--&lt;!&ndash; colorPrimaryDark is used for the status bar &ndash;&gt;-->
        <!--<item name="colorPrimaryDark">@color/custom_orange</item>-->

        <!-- colorControlNormal is used for the toggle btn color -->
        <item name="colorControlNormal">@android:color/white</item>

        <item name="actionMenuTextColor">@android:color/white</item>
        <!-- textColor is used for the text color in toolbar-->
        <!--<item name="android:textColor">@android:color/white</item>-->

    </style>

    <style name="Widget.AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- biometric -->
    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog"/>
    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>
    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="ProgressBarWhite" parent="Widget.AppCompat.ProgressBar">
        <item name="colorControlActivated">@android:color/white</item>
    </style>
</resources>
