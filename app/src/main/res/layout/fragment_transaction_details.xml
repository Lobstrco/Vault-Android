<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:splitMotionEvents="false"
              tools:context=".presentation.home.transactions.details.TransactionDetailsFragment">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:orientation="vertical">

        <Button
                android:text="Set Options"
                android:layout_height="wrap_content"
                android:id="@+id/btnSetOptions"
                android:padding="20dp"
                android:layout_width="match_parent"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@color/color_ff3a6c99"
                android:textAppearance="?android:textAppearanceMedium"
                android:textAllCaps="false"/>

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@android:color/darker_gray"/>
        <Button
                android:text="Payment"
                android:layout_height="wrap_content"
                android:id="@+id/btnPaymentDetails"
                android:padding="20dp"
                android:layout_width="match_parent"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@color/color_ff3a6c99"
                android:textAppearance="?android:textAppearanceMedium"
                android:textAllCaps="false"/>

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@android:color/darker_gray"/>

    </LinearLayout>

    <Button
            android:text="Confirm"
            android:layout_height="wrap_content"
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:background="@drawable/selector_default_button"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:layout_marginBottom="16dp"/>

    <Button
            android:text="Deny"
            android:layout_height="wrap_content"
            android:id="@+id/btnDeny"
            android:layout_width="match_parent"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:background="@drawable/selector_default_button"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:layout_marginBottom="16dp"/>

</LinearLayout>