<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            app:theme="@style/Widget.AppTheme.AppBarOverlay">

        <include
                layout="@layout/layout_toolbar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.lobstr.stellar.vault.presentation.home.SwipeDisablingViewPager
                android:id="@+id/vpHome"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:overScrollMode="never"
                app:isSwipeEnabled="false"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bnvHomeTabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:itemBackground="@drawable/selector_bottom_navigation"
                app:itemTextColor="@color/selector_bottom_navigation_text"
                app:menu="@menu/bottom_navigation_main"/>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
