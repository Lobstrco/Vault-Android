<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="16dp"
              android:orientation="vertical"
              tools:context=".presentation.auth.touch_id.FingerprintSetUpFragment">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/black"
            android:text="@string/text_tv_fingerprint_set_up_title"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textAppearance="?android:textAppearanceSmall"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/black"
            android:text="@string/text_tv_fingerprint_set_up_description"/>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1">

        <ImageView android:layout_width="200dp"
                   android:layout_height="200dp"
                   android:background="@android:color/darker_gray"
                   android:layout_gravity="center"/>

    </FrameLayout>

    <Button
            android:text="@string/text_btn_turn_on"
            android:layout_height="wrap_content"
            android:id="@+id/btnTurOn"
            android:layout_width="match_parent"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@android:color/white"
            android:background="@drawable/selector_default_button"
            android:textAppearance="?android:textAppearanceMedium"
            android:textAllCaps="false"
            android:layout_gravity="center"/>

    <Button
            android:text="@string/text_btn_skip"
            android:layout_height="wrap_content"
            android:id="@+id/btnSkip"
            android:layout_width="match_parent"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@color/color_ff3a6c99"
            android:textAppearance="?android:textAppearanceMedium"
            android:textAllCaps="false"
            android:layout_gravity="center"/>

</LinearLayout>