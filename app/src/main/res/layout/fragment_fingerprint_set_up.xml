<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="16dp"
              android:orientation="vertical"
              tools:context=".presentation.auth.touch_id.FingerprintSetUpFragment">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:orientation="vertical">

        <ImageView android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:src="@drawable/ic_fingerprint_purple"
                   android:layout_gravity="center"
                   android:layout_marginBottom="8dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold"
                android:padding="4dp"
                android:textColor="@android:color/black"
                android:text="@string/text_tv_fingerprint_set_up_title"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceSmall"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="5dp"
                android:textColor="@color/color_757575"
                android:text="@string/text_tv_fingerprint_set_up_description"/>

    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceSmall"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/darker_gray"
            android:text="@string/text_tv_set_up_fingerprint_later"
            android:layout_marginBottom="16dp"/>

    <Button
            android:text="@string/text_btn_turn_on"
            android:layout_height="wrap_content"
            android:id="@+id/btnTurOn"
            android:layout_width="match_parent"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@android:color/white"
            android:background="@drawable/selector_default_button_with_round"
            android:textAppearance="?android:textAppearanceMedium"
            android:textAllCaps="false"
            android:layout_gravity="center"/>

    <Button
            android:text="@string/text_btn_skip"
            android:layout_height="wrap_content"
            android:id="@+id/btnSkip"
            android:layout_width="match_parent"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@color/color_primary"
            android:textAppearance="?android:textAppearanceMedium"
            android:textAllCaps="false"
            android:layout_gravity="center"/>

</LinearLayout>