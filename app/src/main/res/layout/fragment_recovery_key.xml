<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/black"
            android:text="@string/text_tv_recovery_phrase_title"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceSmall"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/black"
            android:text="@string/text_tv_recovery_phrase_description"/>

    <EditText
            android:id="@+id/etRecoveryPhrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="top"
            android:padding="10dp"
            android:background="@drawable/shape_recovery_key_edit_text"
            android:minLines="5"
            android:maxLines="5"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:id="@+id/btnRecoveryKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_gravity="bottom"
                android:enabled="false"
                android:background="@drawable/selector_default_button"
                android:text="@string/text_next_button"/>
    </FrameLayout>
</LinearLayout>