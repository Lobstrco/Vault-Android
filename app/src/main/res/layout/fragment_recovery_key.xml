<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black"
            android:text="@string/text_tv_recovery_phrase_title"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="41dp"
            android:alpha="0.6"
            android:textColor="@color/color_071c33"
            android:text="@string/text_tv_recovery_phrase_description"/>

    <EditText
            android:id="@+id/etRecoveryPhrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="10dp"
            android:minLines="5"
            android:maxLines="5"
            android:textColor="@android:color/black"
            android:inputType="textMultiLine"
            android:background="@drawable/bg_mnemonics"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:id="@+id/btnRecoverKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_gravity="bottom"
                android:enabled="false"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:background="@drawable/selector_default_button_with_round"
                android:text="@string/text_btn_next"/>
    </FrameLayout>
</LinearLayout>