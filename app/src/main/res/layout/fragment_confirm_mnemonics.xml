<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".presentation.auth.mnemonic.create_mnemonic.CreateMnemonicsFragment">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/black"
            android:text="@string/text_tv_confirm_mnemonics_title"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceSmall"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/black"
            android:text="@string/text_tv_confirm_mnemonics_description"/>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1">

        <com.lobstr.stellar.vault.presentation.auth.mnemonic.MnemonicsContainerView
                android:id="@+id/mnemonicContainerToConfirmView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:splitMotionEvents="false"
                app:isCounterEnabled="true"/>

        <TextView
                android:id="@+id/tvConfirmToEmptyState"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/text_tv_confirm_mnemonics_empty_state"/>
    </FrameLayout>


    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="@android:color/darker_gray"/>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1">

        <com.lobstr.stellar.vault.presentation.auth.mnemonic.MnemonicsContainerView
                android:id="@+id/mnemonicContainerToSelectView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:splitMotionEvents="false"
                app:isCounterEnabled="false"/>

        <TextView
                android:id="@+id/tvSelectToEmptyState"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/text_tv_select_mnemonics_empty_state"/>
    </FrameLayout>

    <Button android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:background="@drawable/selector_default_button"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium"
            android:textAllCaps="true"
            android:enabled="false"
            android:text="@string/text_btn_confirm_mnemonics"/>

</LinearLayout>