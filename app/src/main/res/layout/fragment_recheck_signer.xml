<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        tools:context=".presentation.vault_auth.recheck_signer.RecheckSignerFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceSmall"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="5dp"
                android:textColor="@android:color/black"
                android:text="@string/text_tv_re_check_signer_title"/>

        <TextView
                android:id="@+id/tvUserPublicKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:padding="16dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="@android:color/black"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:gravity="center">

            <ImageView android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_gravity="center"
                       android:src="@drawable/ic_error_outline_red"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="@string/text_tv_re_check_signer_description"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:padding="16dp"
                    android:textColor="@android:color/black"/>

        </LinearLayout>

    </LinearLayout>

    <Button
            android:text="@string/text_btn_re_check_signer"
            android:layout_height="wrap_content"
            android:id="@+id/btnRecheck"
            android:layout_width="match_parent"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:background="@drawable/selector_default_button"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium"
            android:textAllCaps="false"
            android:layout_gravity="center"/>
</LinearLayout>