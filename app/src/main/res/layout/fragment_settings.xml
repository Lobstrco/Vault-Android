<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".presentation.home.settings.SettingsFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="70dp"
            android:background="@android:color/white">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_settings_wallet"
                android:padding="10dp"
                android:textAllCaps="true"
                android:background="@color/gray_background"
                android:textColor="@color/settings_title_color"
                android:textSize="13sp"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_divider"/>

        <LinearLayout
                android:id="@+id/llPublicKey"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@android:color/white">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:text="@string/text_settings_public_key"/>

            <ImageView
                    android:id="@+id/ivCopyUserPk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="10dp"
                    android:src="@drawable/ic_content_copy_black"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/tvUserPublicKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="150dp"
                    android:gravity="center"
                    android:textColor="@color/gray_text_color"
                    android:textSize="13sp"
                    android:textAllCaps="true"
                    android:ellipsize="middle"
                    android:layout_weight="0"
                    android:singleLine="true"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="0dp"
                android:background="@color/gray_divider"/>

        <LinearLayout
                android:id="@+id/llSettingsSigners"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white">

            <TextView
                    android:id="@+id/tvSettingsSigners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:text="@string/text_settings_signers"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/ic_arrow_right"
                    tools:ignore="ContentDescription"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_divider"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_settings_security"
                android:padding="10dp"
                android:textAllCaps="true"
                android:textSize="13sp"
                android:background="@color/gray_background"
                android:textColor="@color/settings_title_color"
                android:textAppearance="?android:textAppearanceMedium"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_divider"/>

        <LinearLayout
                android:id="@+id/llSettingsMnemonics"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:background="@android:color/white">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:text="@string/text_settings_mnemonic_code"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/ic_arrow_right"
                    tools:ignore="ContentDescription"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="0dp"
                android:background="@color/gray_divider"/>

        <LinearLayout
                android:id="@+id/llSettingsChangePin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:text="@string/text_settings_change_pin"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/ic_arrow_right"
                    tools:ignore="ContentDescription"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="0dp"
                android:background="@color/gray_divider"/>

        <LinearLayout
                android:id="@+id/llSettingsTouchId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:text="@string/text_settings_touch_id"/>

            <androidx.appcompat.widget.SwitchCompat
                    android:layout_weight="0"
                    android:id="@+id/swSettingsTouchId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_divider"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_settings_about"
                android:textAllCaps="true"
                android:textSize="13sp"
                android:padding="10dp"
                android:background="@color/gray_background"
                android:textColor="@color/settings_title_color"
                android:textAppearance="?android:textAppearanceMedium"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_divider"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"
                android:background="@android:color/white">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:text="@string/text_settings_version"/>

            <TextView
                    android:id="@+id/tvSettingsVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:layout_weight="0"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="0dp"
                android:background="@color/gray_divider"/>

        <LinearLayout
                android:id="@+id/llSettingsHelp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:text="@string/text_settings_help"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/ic_arrow_right"
                    tools:ignore="ContentDescription"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_divider"/>

        <TextView
                android:id="@+id/tvLogOut"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:background="@android:color/white"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:text="Log Out"
                android:padding="10dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:gravity="center"
                android:drawablePadding="8dp"
                android:background="@color/gray_background"
                android:layout_gravity="bottom"
                android:textSize="10sp"
                android:drawableTop="@drawable/ic_gray_logo"
                android:textColor="@color/settings_text_privacy"
                android:text="@string/text_all_rights_reserved"/>
    </LinearLayout>
</ScrollView>