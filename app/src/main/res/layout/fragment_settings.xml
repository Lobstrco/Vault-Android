<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/gray_background"
        tools:context=".presentation.home.settings.SettingsFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_settings_wallet"
                android:padding="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@android:color/white">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_weight="1"
                    android:text="@string/text_settings_public_key"/>

            <ImageView
                    android:id="@+id/ivCopyUserPk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="10dp"
                    android:src="@drawable/ic_copy"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/tvUserPublicKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="150dp"
                    android:gravity="center"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textAllCaps="true"
                    android:ellipsize="middle"
                    android:layout_weight="0"
                    android:singleLine="true"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

        <LinearLayout
                android:id="@+id/llSettingsSigners"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white">

            <TextView
                    android:id="@+id/tvSettingsSigners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_weight="1"
                    android:text="@string/text_settings_signers"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/ic_arrow_right"
                    tools:ignore="ContentDescription"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_settings_security"
                android:padding="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

        <LinearLayout
                android:id="@+id/llSettingsMnemonics"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:background="@android:color/white">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_weight="1"
                    android:text="@string/text_settings_mnemonic_code"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/ic_arrow_right"
                    tools:ignore="ContentDescription"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

        <LinearLayout
                android:id="@+id/llSettingsDeviceLock"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_weight="1"
                    android:text="@string/text_settings_device_lock"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/ic_arrow_right"
                    tools:ignore="ContentDescription"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_settings_about"
                android:padding="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"
                android:background="@android:color/white">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_weight="1"
                    android:text="@string/text_settings_version"/>

            <TextView
                    android:id="@+id/tvSettingsVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:padding="10dp"
                    android:layout_weight="0"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

        <LinearLayout
                android:id="@+id/llSettingsHelp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@android:color/white">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_weight="1"
                    android:text="@string/text_settings_help"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/ic_arrow_right"
                    tools:ignore="ContentDescription"/>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

        <TextView
                android:id="@+id/tvLogOut"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:background="@android:color/white"
                android:text="Log Out"
                android:padding="10dp"
                android:textAppearance="?android:textAppearanceMedium"/>
    </LinearLayout>
</ScrollView>