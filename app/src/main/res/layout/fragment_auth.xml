<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:splitMotionEvents="false"
                                                   tools:context=".presentation.auth.enter_screen.AuthFragment">

    <Button
            android:text="New"
            android:layout_height="wrap_content"
            android:id="@+id/btnAuthNew"
            android:layout_width="0dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:background="@drawable/selector_default_button"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium"
            android:textAllCaps="true"
            app:layout_constraintBottom_toTopOf="@+id/guideline" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintVertical_bias="1.0"
            android:layout_marginBottom="32dp"/>
    <Button
            android:text="Restore"
            android:layout_height="wrap_content"
            android:id="@+id/btnAuthRestore"
            android:layout_width="0dp"
            android:layout_marginTop="32dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:background="@drawable/selector_default_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            app:layout_constraintTop_toTopOf="@+id/guideline" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>